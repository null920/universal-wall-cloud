/* pages/indexForm/indexForm.wxss */
.form-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.form {
  width: 100%;
  margin-top: 1rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}

.textarea-content {
  width: 87%;
  border: 6rpx solid #303030;
  border-radius: 20rpx;
  padding: 20rpx 10rpx;
}

.image-form {
  width: 90%;
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}

.image-form .image-top {
  display: flex;
  justify-content: space-between;
}

.image-form .select-image {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 30rpx;
}

.upload-image {
  width: 105px;
  height: 105px;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.radio-group {
  width: 100%;
  padding: 30rpx 0;
  margin: 30rpx 0;
  display: flex;
  justify-content: space-around;
  border-top: 3rpx dashed #000;
  border-bottom: 3rpx dashed #000;
}

.radio-label {
  display: flex;
}

.img-list {
  width: 105px;
  height: 105px;
  margin-left: 10rpx;
  margin-top: 10rpx;
  position: relative;
}

.img-list .pre-img {
  width: 100%;
  height: 100%;
}

.img-list .delete-icon {
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  right: -10rpx;
  top: -10rpx;
}

.button-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 80rpx;
  align-items: center;
  text-align: center;
}
.login-button {
  height: 90rpx;
  width: 100%;
  background: linear-gradient(110deg, #ffd73b 0%, #fbc346 100%);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: center;
}
